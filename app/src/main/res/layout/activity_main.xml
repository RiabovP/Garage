<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pogrebok_blur_scr"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tableTiles"
                android:layout_marginTop="40dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_column="0"
                        android:id="@+id/TempHome"
                        android:background="@drawable/tile_separator"
                        android:layout_height="105dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:text="@string/TempHome"
                        android:layout_width="105dp"
                        android:textColor="#ffffff"
                        android:layout_weight="1"/>
                    <Button
                        android:text="@string/TempStreet"
                        android:layout_column="1"
                        android:id="@+id/TempStreet"
                        android:background="@drawable/tile_separator"
                        android:layout_marginRight="15dp"
                        android:layout_height="105dp"
                        android:layout_width="105dp"
                        android:layout_marginBottom="25dp"
                        android:textColor="#ffffff"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/TempPogrebok"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_column="2"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/tile_separator"
                        android:text="@string/TempPogrebok"
                        android:textColor="#ffffff" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/TempMax"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_column="0"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/tile_separator"
                        android:text="@string/TempMax"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/TempMin"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_column="1"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/tile_separator"
                        android:text="@string/TempMin"
                        android:textColor="#ffffff" />
                    <Button
                        android:text="@string/Pressure"
                        android:layout_column="2"
                        android:id="@+id/Pressure"
                        android:background="@drawable/tile_separator"
                        android:layout_height="105dp"
                        android:layout_width="105dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="25dp"
                        android:textColor="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_column="0"
                        android:id="@+id/RashodEE"
                        android:background="@drawable/tile_separator"
                        android:layout_height="105dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="105dp"
                        android:layout_marginBottom="25dp"
                        android:text="@string/EnergyConsumption"
                        android:textColor="#ffffff"/>

                    <Button
                        android:id="@+id/TimeWarm"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_column="1"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/tile_separator"
                        android:elegantTextHeight="true"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/AmountHours"
                        android:textAllCaps="false"
                        android:textColor="#ffffff" />
                    <Button
                        android:text="@string/PriceEnergy"
                        android:layout_column="2"
                        android:id="@+id/PriceEE"
                        android:background="@drawable/tile_separator"
                        android:layout_height="105dp"
                        android:layout_width="105dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="25dp"
                        android:textColor="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_column="0"
                        android:id="@+id/countTurnOn"
                        android:background="@drawable/tile_separator"
                        android:layout_height="105dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:layout_width="105dp"
                        android:text="@string/Report"
                        android:textAlignment="center"
                        android:textColor="#ffffff"/>
                    <Button
                        android:text="@string/Refresh"
                        android:layout_column="1"
                        android:id="@+id/Refresh"
                        android:background="@drawable/tile_separator_gradient"
                        android:layout_height="105dp"
                        android:layout_width="105dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:textColor="#ffffff"/>
                    <Button
                        android:text="@string/Forecast"
                        android:layout_column="2"
                        android:id="@+id/buttWeather"
                        android:background="@drawable/tile_separator"
                        android:layout_height="105dp"
                        android:layout_width="105dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="25dp"
                        android:textColor="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/butsOnOff"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:layout_column="1"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/power_off" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollView1">

        <TextView
            android:id="@+id/dateUpdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:gravity="center_horizontal"
            android:text="Дата"
            android:textAlignment="center"
            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>