                        android:id="@+id/Date_1"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="2"
                        android:id="@+id/Date_2"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="3"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/Date_3"/>
                    <TextView
                        android:text="Text"
