                        android:id="@+id/Date_7"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="8"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/Date_8"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="9"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="25dp"
                        android:id="@+id/Date_9"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Text"
                        android:layout_column="0"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/Day_0"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="1"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/Day_1"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="2"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/Day_2"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="3"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/Day_3"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="4"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/Day_4"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="5"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/Day_5"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="6"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/Day_6"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="7"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/Day_7"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="8"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/Day_8"/>
                    <TextView
                        android:text="Text"
                        android:layout_column="9"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/Day_9"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow10"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/gradus"
                        android:layout_column="0"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/tempHigh_0"/>
                    <TextView
                        android:text="@string/gradus"
                        android:layout_column="1"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/tempHigh_1"/>
                    <TextView
                        android:text="@string/gradus"
                        android:layout_column="2"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/tempHigh_2"/>
                    <TextView
                        android:text="@string/gradus"
                        android:layout_column="3"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/tempHigh_3"/>
                    <TextView
                        android:text="@string/gradus"
                        android:layout_column="4"
